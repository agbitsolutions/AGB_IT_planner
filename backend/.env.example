# Backend Configuration
PORT=5000
NODE_ENV=development
MONGODB_URI=mongodb://localhost:27017/agb_planner

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_$(openssl rand -hex 16)
JWT_EXPIRE=7d

# Email Configuration (Gmail)
# Get App Password from: https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here

NOTIFICATION_FROM_EMAIL=noreply@agbplanner.com

# File Upload Configuration
FILE_UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Optional: For production
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/agb_planner
# NODE_ENV=production
# JWT_SECRET=your_production_secret_key
